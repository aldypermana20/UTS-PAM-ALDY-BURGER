<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="24dp"
    tools:context=".WelcomeActivity">

    <!-- Top Section - Illustration -->
    <LinearLayout
        android:id="@+id/illustrationContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Food Illustration Circle -->
        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/illustration_background">

            <ImageView
                android:id="@+id/ivIllustration"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_food_plate"
                android:contentDescription="@string/food_illustration" />
        </FrameLayout>

        <!-- Welcome Title -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/signup_title"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/dark_gray"
            android:gravity="center"/>

        <!-- Description -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingHorizontal="20dp"
            android:text="@string/signup_description"
            android:textSize="15sp"
            android:textColor="@color/dark_gray"
            android:gravity="center"
            android:alpha="0.7"
            android:lineSpacingExtra="4dp"/>

    </LinearLayout>

    <!-- Bottom Section - Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Register Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/button_primary"
            android:text="@string/register"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:elevation="4dp"
            app:backgroundTint="@color/biru"
            app:cornerRadius="28dp"/>

        <!-- Login Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_secondary"
            android:text="@string/login"
            android:textColor="@color/biru"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            app:backgroundTint="@color/light_gray"
            app:cornerRadius="28dp"
            app:strokeColor="@color/biru"
            app:strokeWidth="2dp"/>

    </LinearLayout>

</RelativeLayout>