<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ivOrderFood"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_food"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvOrderFoodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cheese Burger"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvOrderServings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 porsi"
                android:textSize="14sp"
                android:textColor="@color/dark_gray"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tvOrderPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 60.000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/biru"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tvOrderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pemesan: Nazwa"
                android:textSize="12sp"
                android:textColor="@color/dark_gray"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tvOrderAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat: Jl. Contoh"
                android:textSize="12sp"
                android:textColor="@color/dark_gray"
                android:layout_marginTop="2dp"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tvOrderTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 Okt 2025, 14:30"
                android:textSize="11sp"
                android:textColor="@color/dark_gray"
                android:alpha="0.7"
                android:layout_marginTop="4dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>