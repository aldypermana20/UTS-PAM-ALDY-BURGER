<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".FoodDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header with Back Button -->

        <!-- Food Image -->
        <RelativeLayout
            android:id="@+id/headerDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/biru"
            android:padding="20dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@drawable/back_button_background"
                android:contentDescription="@string/back"
                android:src="@drawable/ic_back"
                android:tint="@color/white"
                tools:ignore="UseAppTint" />

            <TextView
                android:id="@+id/tvHeaderTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/hello_nazwa"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvHeaderSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvHeaderTitle"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:text="@string/food_order_details"
                android:textColor="@color/light_cream"
                android:textSize="14sp" />

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/imageContainer"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@id/headerDetail"
            android:layout_margin="20dp"
            android:background="@drawable/food_image_background"
            android:elevation="4dp">

            <ImageView
                android:id="@+id/ivFoodDetail"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_food"
                android:contentDescription="@string/food_image"/>

        </FrameLayout>

        <!-- Food Details Card -->
        <LinearLayout
            android:id="@+id/detailsSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageContainer"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <!-- Food Name -->
            <TextView
                android:id="@+id/tvFoodDetailName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nasi Goreng"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/dark_gray"/>

            <!-- Food Description -->
            <TextView
                android:id="@+id/tvFoodDetailDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Nasi goreng spesial dengan telur dan ayam"
                android:textSize="15sp"
                android:textColor="@color/dark_gray"
                android:alpha="0.7"
                android:lineSpacingExtra="4dp"/>

            <!-- Price -->
            <TextView
                android:id="@+id/tvFoodDetailPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Rp 25.000"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/biru"/>

        </LinearLayout>

        <!-- Order Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOrder"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_below="@id/detailsSection"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="20dp"
            android:text="@string/order_now"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            app:backgroundTint="@color/biru"
            app:cornerRadius="28dp"/>

        <!-- Bottom Navigation -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:elevation="8dp"
            app:itemIconTint="@color/biru"
            app:itemTextColor="@color/biru"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_nav_menu"/>

    </RelativeLayout>

</ScrollView>